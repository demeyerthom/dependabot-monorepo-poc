{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "repositories": [
    "demeyerthom/dependabot-monorepo-poc"
  ],
  "extends": [
    "config:recommended",
    "monorepo:turbo"
  ],
  "packageRules": [
    {
      "groupName": "packages",
      "matchFileNames": [
        "packages/**"
      ]
    },
    {
      "groupName": "apps",
      "matchFileNames": [
        "packages/**"
      ]
    }
  ]
}
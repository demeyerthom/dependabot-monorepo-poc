{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "monorepo:turbo"
  ],
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "groupName": "Shared",
      "matchFileNames": [
        "packages/**"
      ]
    },
    {
      "groupName": "Apps packages",
      "matchFileNames": [
        "apps/**"
      ]
    }
  ]
}

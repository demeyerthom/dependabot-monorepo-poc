{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "repositories": [
    "demeyerthom/dependabot-monorepo-poc"
  ],
  "extends": [
    "config:recommended",
    "monorepo:turbo"
  ],
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "groupName": "packages (npm)",
      "matchFileNames": [
        "packages/**/package.json"
      ]
    },
    {
      "groupName": "apps (npm",
      "matchFileNames": [
        "packages/**/package.json"
      ]
    }
  ]
}